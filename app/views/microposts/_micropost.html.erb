<li id="micropost-<%= micropost.id  %>" >
  <%= link_to gravatar_for(micropost.user, size: 50), micropost.user %>
  <span class="content"><%= micropost.content %>
  <%= image_tag micropost.picture.url if micropost.picture? %>
  </span>
   <span class="user">started by <%= link_to micropost.user.name, micropost.user %></span>
  <span class="timestamp">
    Posted <%= time_of_creation(micropost.created_at)%> .
    <% if current_user?(micropost.user) %>
    <%=  link_to "delete",micropost,method: :delete,data:{confirm: "waana delete?"} %>
    <% end %>
  </span>
</li>
